<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_coordinate_form" model="ir.ui.view">
        <field name="name">progress.coordinate.form</field>
        <field name="model">progress.coordinate</field>
        <field name="arch" type="xml">
            <form string="Progress Coordinate">
                <sheet>
                    <group>
                        <field name="report_id"/>
                        <field name="latitude"/>
                        <field name="longitude"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="view_coordinate_tree" model="ir.ui.view">
        <field name="name">progress.coordinate.tree</field>
        <field name="model">progress.coordinate</field>
        <field name="arch" type="xml">
            <tree sample="1" multi_edit="1">
                <field name="latitude"/>
                <field name="longitude"/>
                <field name="report_id"/>
            </tree>
        </field>
    </record>

    <record id="action_progress_coordinate" model="ir.actions.act_window">
        <field name="name">Coordinates</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">progress.coordinate</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new coordinate            
            </p>
        </field>
    </record>

    <menuitem id="menu_coordinate_root" name="Coordinates" sequence="20" />
    <menuitem id="menu_coordinate" name="Coordinate" parent="menu_progress_report_root" action="action_progress_coordinate" />
</odoo>