<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_report_form" model="ir.ui.view">
        <field name="name">progress.report.form</field>
        <field name="model">progress.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="reference" readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="notes"/>
                        </group>
                        <group>
                            <field name="city"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Coordinates" name="coordinate">
                            <field name="coordinate_ids" readonly="1">
                                <tree create="0" edit="0" delete="0">
                                    <field name="longitude"/>
                                    <field name="latitude" />
                                </tree>

                                <form>
                                    <group>
                                        <field name="latitude"/>
                                        <field name="longitude"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_report_tree" model="ir.ui.view">
        <field name="name">progress.report.tree</field>
        <field name="model">progress.report</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="name"/>
                <field name="city" />
                <field name="notes" />
            </tree>
        </field>
    </record>

    <record id="view_report_kanban" model="ir.ui.view">
        <field name="name">progress.report.kanban</field>
        <field name="model">progress.report</field>
        <field name="arch" type="xml">
            <kanban sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="city"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="o_kanban_image">
                                            <img t-att-src="kanban_image('progress.report','image',record.id.raw_value)"/>
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <ul>
                                            <li>Name: <field name="name"></field>
                                            </li>
                                            <li>City: <field name="city"></field>
                                            </li>
                                            <li>Notes: <field name="notes"></field>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_progress_report" model="ir.actions.act_window">
        <field name="name">Reports</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">progress.report</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new report
            </p>
        </field>
    </record>

    <menuitem id="menu_progress_report_root" name="Progress Report" sequence="10"/>
    <menuitem id="menu_report" name="Report" parent="menu_progress_report_root" action="action_progress_report" sequence="10" />
</odoo>